@model IEnumerable<MvcFirstProject.Models.BlogModel>

@if (Model.Count()==0)
{
    <div class="alert alert-warning">
        <h3>
            <strong><span class="glyphicon glyphicon-exclamation-sign"></span></strong>
            Kayıt Bulunamadı
        </h3>
    </div>
}
else
{
    foreach (var item in Model)
    {
        <h3 class="page-header">@item.BlogName</h3>
        <p>
            <span class="glyphicon glyphicon-time"></span>
            @item.Date
        </p>
        <img class="img-responsive" src="~/Content/img/1.png" width="300" alt="resim bulunamadı." />
        <hr />
        <p>
            @item.Description
        </p>
        @Html.ActionLink("Devamı...", "Details", "Blog", new { id = item.Id }, new { @class = "btn btn-primary btn-md" })
    }

}



